@model IEnumerable<CategoryModel>;
@{
ViewData["Title"] = "Index";
}



<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-3">
    <div class="col-6">
        <h2>Category List</h2>
    </div>
    <br>
    <br>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
           <i class="bi bi-plus-circle"></i> &nbsp; Create Category List
        </a>
    </div>
    
</div>

<table class="table table-bordered table-striped" style="width:100% ;">
    <thead>
        <tr style="width:50% ;">
            <th>
               Category Name
            </th>
            <th style="width: 30%;">
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {<tr>   
            <td>
                @obj.Name
            </td>
            <td>
                @obj.DisplayOrder
            </td>
            <td>
              
                <a asp-controller="Category" asp-action="Edit" asp-route-id=@obj.ID class="btn btn-primary mx-2" style="width:100px ;"><i class="bi bi-pencil-square"></i>Edit</a>
                <a asp-controller="Category" asp-action="Delete" asp-route-id=@obj.ID class="btn btn-danger mx-2" style="width:100px ;"><i class="bi bi-trash"></i>Delete</a>
             
            </td>    
        </tr>}
    </tbody>
</table>
</div>